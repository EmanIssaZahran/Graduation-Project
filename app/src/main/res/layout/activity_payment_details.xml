<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    tools:context=".ui.activity.PaymentDetails">

    <ImageView
        android:id="@+id/img_waiting_order"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/waiting_order"
        />

    <TextView
        android:id="@+id/txt_delivery_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:hint="Address"
        android:paddingStart="15dp"
        android:textSize="17sp"
        android:textColor="@color/colorBlack"
        android:shadowRadius="1"
        android:shadowColor="@color/colorBlack"
        app:layout_constraintTop_toBottomOf="@id/img_waiting_order"/>
    <TextView
        android:id="@+id/txt_Time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:textSize="17sp"
        android:hint="Time "
        android:paddingStart="15dp"
        android:textColor="@color/colorBlack"
        android:shadowRadius="1"
        android:shadowColor="@color/colorBlack"
        app:layout_constraintTop_toBottomOf="@id/txt_delivery_location"/>
    <TextView
        android:id="@+id/txt_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:textSize="17sp"
        android:hint="Status"
        android:paddingStart="15dp"
        android:textColor="@color/colorBlack"
        android:shadowRadius="1"
        android:shadowColor="@color/colorBlack"
        app:layout_constraintTop_toBottomOf="@id/txt_total_price"/>
    <TextView
        android:id="@+id/txt_total_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:textSize="17sp"
        android:hint="@string/total_price"
        android:paddingStart="15dp"
        android:textColor="@color/colorBlack"
        android:shadowRadius="1"
        android:shadowColor="@color/colorBlack"
        app:layout_constraintTop_toBottomOf="@id/txt_Time"/>

<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintBottom_toBottomOf="parent"
    android:gravity="center"
    android:textColor="@color/colorPrimary"
    android:layout_marginBottom="12dp"
    android:text="This Screen opens just once\n take a screenShot"/>


</androidx.constraintlayout.widget.ConstraintLayout>