<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="10dp"
    tools:context=".ui.activity.OrderDetailsActivity">

    <Toolbar
        android:id="@+id/toolbar_detail"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginBottom="5dp"
        android:background="@color/colorLightPink01"
        android:elevation="4dp"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/txt_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            android:gravity="center"
            android:shadowColor="@color/colorPrimary"
            android:shadowRadius="2"
            android:text="   Order Details "
            android:textAllCaps="true"
            android:textColor="@color/colorPrimary"
            android:textSize="23sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_name" />

    </Toolbar>

    <TextView
        android:id="@+id/txt_name"
        style="@style/TextViewSmall"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:shadowColor="@color/colorPrimary"
        android:shadowRadius="2"
        android:text="Name : "
        android:textColor="@color/colorPrimary"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_detail" />

    <TextView
        android:id="@+id/txt_name_data"
        style="@style/TextViewSmall"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:padding="10dp"
        android:shadowColor="@color/colorBlack"
        android:shadowRadius="2"
        android:textColor="@color/colorBlack"
        android:textSize="18sp"
        android:textStyle="normal"
        app:layout_constraintStart_toEndOf="@+id/txt_name"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_detail" />

    <TextView
        android:id="@+id/txt_phone"
        style="@style/TextViewSmall"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:shadowColor="@color/colorPrimary"
        android:shadowRadius="2"
        android:text="Phone  : "
        android:textColor="@color/colorPrimary"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_name" />

    <TextView
        android:id="@+id/txt_phone_data"
        style="@style/TextViewSmall"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:padding="10dp"
        android:shadowColor="@color/colorBlack"
        android:shadowRadius="2"
        android:textColor="@color/colorBlack"
        android:textSize="18sp"
        android:textStyle="normal"
        app:layout_constraintStart_toEndOf="@+id/txt_phone"
        app:layout_constraintTop_toBottomOf="@+id/txt_name" />

    <TextView
        android:id="@+id/txt_total_price"
        style="@style/TextViewSmall"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:shadowColor="@color/colorPrimary"
        android:shadowRadius="2"
        android:text="Total Price  : "
        android:textColor="@color/colorPrimary"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_phone" />

    <TextView
        android:id="@+id/txt_total_price_data"
        style="@style/TextViewSmall"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:padding="10dp"
        android:shadowColor="@color/colorBlack"
        android:shadowRadius="2"
        android:textColor="@color/colorBlack"
        android:textSize="18sp"
        android:textStyle="normal"
        app:layout_constraintStart_toEndOf="@+id/txt_total_price"
        app:layout_constraintTop_toBottomOf="@+id/txt_phone" />

    <TextView
        android:id="@+id/txt_dv"
        android:layout_width="225dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:padding="10dp"
        android:shadowColor="@color/colorBlack"
        android:shadowRadius="2"
        android:textColor="@color/colorBlack"
        android:textSize="18sp"
        android:textStyle="normal"
        app:layout_constraintStart_toEndOf="@+id/txt_delivery_location"
        app:layout_constraintTop_toBottomOf="@+id/txt_total_price" />

    <TextView
        android:id="@+id/txt_delivery_location"
        style="@style/TextViewSmall"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:shadowColor="@color/colorPrimary"
        android:shadowRadius="2"
        android:text="Delivery Address : "
        android:textColor="@color/colorPrimary"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_total_price" />

    <TextView
        android:id="@+id/txt_time"
        style="@style/TextViewSmall"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:shadowColor="@color/colorPrimary"
        android:shadowRadius="2"
        android:text="Time : "
        android:textColor="@color/colorPrimary"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_dv" />

    <TextView
        android:id="@+id/txt_time_data"
        style="@style/TextViewSmall"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:padding="10dp"
        android:shadowColor="@color/colorBlack"
        android:shadowRadius="2"
        android:textColor="@color/colorBlack"
        android:textSize="18sp"
        android:textStyle="normal"
        app:layout_constraintStart_toEndOf="@+id/txt_time"
        app:layout_constraintTop_toBottomOf="@+id/txt_dv" />

    <TextView
        android:id="@+id/txt_date"
        style="@style/TextViewSmall"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:shadowColor="@color/colorPrimary"
        android:shadowRadius="2"
        android:text="Date : "
        android:textColor="@color/colorPrimary"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_time" />

    <TextView
        android:id="@+id/txt_date_data"
        style="@style/TextViewSmall"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:padding="10dp"
        android:shadowColor="@color/colorBlack"
        android:shadowRadius="2"
        android:textColor="@color/colorBlack"
        android:textSize="18sp"
        android:textStyle="normal"
        app:layout_constraintStart_toEndOf="@+id/txt_date"
        app:layout_constraintTop_toBottomOf="@+id/txt_time" />

    <TextView
        android:id="@+id/txt_status"
        style="@style/TextViewSmall"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:shadowColor="@color/colorPrimary"
        android:shadowRadius="2"
        android:text="Status : "
        android:textColor="@color/colorPrimary"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_date" />

    <Spinner
        android:id="@+id/sp_state"
        android:layout_width="125dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:padding="10dp"
        android:textSize="18sp"
        android:textStyle="normal"
        app:layout_constraintStart_toEndOf="@id/txt_status"
        app:layout_constraintTop_toBottomOf="@id/txt_date" />

    <Button
        android:id="@+id/btn_save"
        style="@style/ButtonText"
        android:layout_marginBottom="100dp"
        android:text="Save"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/txt_txt"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

</androidx.constraintlayout.widget.ConstraintLayout>